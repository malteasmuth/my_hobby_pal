<div class="container">

  <h1>Das ist dein Dashboard!</h1>

  <% if @user_profile != nil %>
  <h2>Willkommen zurück, <%= @user_profile.name %>!</h2>
    <h3>Deine Hobbies</h3>
    <ul>
    <% if @user_profile.interests %>
      <% @user_profile.interests.each do |interest| %>
    <li><%= interest.name %></li>
     <% end %>
    <% end %>
    </ul>
      <% if @pal %>
      <div class="container">
        <h2>Dein Kumpel heißt: <%= @pal.name  %> und wohnt in <%= @pal.wohnort  %>!</h2>
       </div>
    <% end %>
  <% end %>

  <% if @user_profile %>
    <%= link_to "Daten ändern", edit_profil_path(@user_profile), class: "btn btn-primary" %>
    <%= link_to "Finde einen Kumpel", findpal_path, class: "btn btn-success" %>
  <% else %>
    <%= link_to "Neues Profil", new_profil_path, class: "btn btn-primary" %>
  <% end %>
</div>
